{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-fno-elide-constructors",
                "-std=c++11",
                "-Wall",
                "-Werror",
                "-Wdeprecated",
                "-pedantic",
                "-DMEMTRACE",
                "-g",
                "${fileDirname}\\**.cpp",
                "-o",
                "${workspaceFolder}\\${workspaceFolderBasename}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}